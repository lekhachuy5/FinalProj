@model IEnumerable<ClockUniverse.ProductTable>

@{


    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}
<style>
    img {
        width: 150px;
        height: 150px;
    }

    .img2 {
        width: 0px;
        height: 0px;
    }

    h2 {
        text-align: center;
        margin-top: 4px;
    }

    .sorting {
        width: 200px;
    }

    #Large{
        font-size:18px;
    }
</style>

<h2>DANH SÁCH SẢN PHẨM</h2>
<p>
    @Html.ActionLink("Thêm Sản Phẩm", "Create", null, new { @class = "btn btn-default " })
</p>


<table class="display table table-bordered" id="mytable">
    <thead>
        <tr>
            <th id="Large">
                Id
            </th>
            <th id="Large">
                Tên Đồng Hồ
            </th>
            @*<th>
                    Mô Tả Đồng Hồ
                </th>
                <th>
                    Thông Số Đồng Hồ
                </th>*@
            <th id="Large">
                Giá Niêm Yết
            </th>
            <th id="Large">
                Giá Khuyến Mãi
            </th>
            <th id="Large">
                Số Lượng
            </th>
            <th id="Large">
                Loại Đồng Hồ
            </th>
            <th id="Large">
                Hình Ảnh Đồng Hồ
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td id="Large">
                    @item.Watch_ID
                </td>
                <td id="Large">
                    @item.Watch_Name
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Watch_Description)
                    </td>
                    <td>
                        @HtmlDisplayFor(modelItem => item.)
                    </td>*@

                <td id="Large">
                    @item.Original_Price.ToString("N0") VNĐ
                </td>
                <td id="Large">
                    @item.Selling_Price.ToString("N0") VNĐ
                </td>
                <td id="Large">
                    @Html.DisplayFor(modelItem => item.InStock)
                </td>
                <td id="Large">
                    @Html.DisplayFor(modelItem => item.ProductType.ProductType_Name)
                </td>
                <td>
                    <img src="@Url.Action("Image", new { id = item.Watch_ID }) " />
                    <img class="img2" src="@Url.Action("Image1", new { id = item.Watch_ID }) " />
                    <img class="img2" src="@Url.Action("Image2", new { id = item.Watch_ID }) " />
                </td>
                <td>
                    <div class="btn btn-default">@Html.ActionLink("Chi Tiết", "Details", new { id = item.Watch_ID })</div>
                    <div class="btn btn-default">@Html.ActionLink("Sửa", "Edit", new { id = item.Watch_ID })</div>
                    <div class="btn btn-default">@Html.ActionLink("Xóa", "Delete", new { id = item.Watch_ID })</div>

                </td>
            </tr>
        }
    </tbody>
</table>
