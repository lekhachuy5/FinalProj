@model IEnumerable<ClockUniverse.ProductTable>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}

<h2>QUẢN LÝ SẢN PHẨM</h2>
@using (Html.BeginForm("Index", "ProductManager", FormMethod.Get, new { @class = "navbar-form navbar-right", role = "search", id = "search-form" }))
{
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Nhập id sản phẩm" name="SearchTerm" value="@ViewBag.SearchTerm" id="search-box">
        <button type="submit" class="btn btn-default hidden-xs"><i class="glyphicon glyphicon-search"></i></button>
    </div>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Watch_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Watch_Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Original_Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Selling_Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InStock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductType.ProductType_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Watch_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Watch_Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Original_Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Selling_Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InStock)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductType.ProductType_Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Watch_ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.Watch_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Watch_ID })
        </td>
    </tr>
}

</table>
