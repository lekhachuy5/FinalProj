@model ClockUniverse.QuanLyDH

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 style="text-align:center; font-weight:bold">CẬP NHẬT THÔNG TIN SẢN PHẨM</h3>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <style>
       .col-md-10 {
           width:80%;
           border-radius:10px;
           }
       .btn-primary a{
           color:white;
       }
       .btn-primary {
           margin-left: 90%;
           display: block;
           margin-bottom: 22px;
       }
       
   </style>
    <div class="form-horizontal">
        <hr/>
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.TenDH, "Tên Đơn Hàng", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenDH)
                @Html.ValidationMessageFor(model => model.TenDH)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LoaiDH, "Loại Đơn Hàng", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LoaiDH)
                @Html.ValidationMessageFor(model => model.LoaiDH)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ThongTinDH, "Thông Tin Đơn Hàng", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ThongTinDH)
                @Html.ValidationMessageFor(model => model.ThongTinDH)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HinhAnhDH, "Hình Ảnh Đơn Hàng", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HinhAnhDH)
                @Html.ValidationMessageFor(model => model.HinhAnhDH)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GiaTien, "Giá Tiền", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GiaTien)
                @Html.ValidationMessageFor(model => model.GiaTien)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SoLuong, "Số Lượng", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoLuong)
                @Html.ValidationMessageFor(model => model.SoLuong)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập Nhật" class="btn btn-group" />
            </div>
        </div>
    </div>
}

<div>
    <button type="button" class="btn btn-primary">@Html.ActionLink("Trở về danh sách", "Index")</button>
</div>
