@model ClockUniverse.Contact


@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}

<h2>Reply</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


   
    <hr />
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Contact_ID)
    @Html.HiddenFor(model => model.Customer_Name)
    @Html.HiddenFor(model => model.Address)
    @Html.HiddenFor(model => model.Phone)
    @Html.HiddenFor(model => model.Email)

    <dl class="dl-horizontal">
        <dt>
            Họ Tên Khách Hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer_Name)
        </dd>

        <dt>
            Số Điện Thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Địa Chỉ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt>
            Tình Trạng Xử Lý
        </dt>

        <dd>
            @Html.DropDownList("Status", (SelectList)ViewBag.DS)
        </dd>
        <dt>
            Chủ đề
        </dt>
        <dd>
            @Html.Display("Tito")
        </dd>
        <dt>
            Nội dung
        </dt>
        <dd>
            @Html.Display("FBR")
        </dd>
       <dt>
           Nội Dung Trả Lời
       </dt>

        <dd>
            @Html.TextArea("Feedback_Reply")
            @Html.ValidationMessage("Feedback_Reply")
        </dd>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </dl>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
