@model ClockUniverse.Contact


@{
    /**/

    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}

<h2>Reply</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



    <hr />
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Contact_ID)
    @Html.HiddenFor(model => model.Customer_Name)
    @Html.HiddenFor(model => model.Address)
    @Html.HiddenFor(model => model.Phone)
    @Html.HiddenFor(model => model.Email)
    <div>
        <div class="form-group">
            <table class="table table-bordered">
                <tr>
                    <th>
                        Họ Tên Khách Hàng
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.Customer_Name)
                    </td>
                </tr>

                <tr>
                    <th>
                        Số Điện Thoại
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.Phone)
                    </td>
                </tr>

                <tr>
                    <th>
                        Email
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.Email)
                    </td>
                </tr>

                <tr>
                    <th>
                        Địa Chỉ
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.Address)
                    </td>
                </tr>


                <tr>

                    <th>
                        Ngày Cập Nhật
                    </th>
                    <td>
                        @Html.Display("Date")
                    </td>
                </tr>

                <tr>
                    <th>
                        Chủ đề
                    </th>
                    <td>
                        @Html.Display("Tito")
                    </td>
                </tr>

                <tr>
                    <th>
                        Nội dung
                    </th>
                    <td>
                        <textarea disabled> @Html.Display("FBR")</textarea>
                    </td>
                </tr>
                <tr>
                    <th>
                        Nội dung trả lời
                    </th>
                    <td>
                        @Html.TextArea("FeedBack_Reply")
                    </td>
                </tr>

                <tr>
                    <th>
                        Tình Trạng Xử Lý
                    </th>


                    <td>
                        @Html.DropDownList("Status", (SelectList)ViewBag.DS)
                    </td>
                </tr>

            </table>

            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
                @Html.ActionLink("Quay lại", "Index")
            </div>
        </div>
    </div>
}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
