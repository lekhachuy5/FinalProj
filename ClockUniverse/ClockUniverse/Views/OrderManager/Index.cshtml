@model IEnumerable<ClockUniverse.QLdonHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .link{
        color:blue;
    }
    .linkcr {
        color: blue;
        background-color:white;
    }
</style>
<h2 style="text-align:center">QUẢN LÝ ĐƠN HÀNG</h2>

<p>
    @Html.ActionLink("Thêm đơn hàng", "Create",null, new { @class="linkcr"})
</p>
<table class="table table-bordered" style="font-size:14px; font-family:Arial">
    <tr>
        <th>
            Tên đồng hồ
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Tổng tiền
        </th>
        <th>
            Hình ảnh
        </th>
        <th>
            Ngày đặt
        </th>
        <th>
            Ngaỳ giao
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenDH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TongTien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HinhAnh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayDatHang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayGiaoHang)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ID }, new { @class = "link" }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ID }, new { @class = "link" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ID }, new { @class = "link" })
            </td>
        </tr>
    }

</table>
