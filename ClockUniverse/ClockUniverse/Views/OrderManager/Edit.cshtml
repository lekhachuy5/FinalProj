@model ClockUniverse.Order_Detail

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}

<h2 style="text-align:center ;color:blue">CẬP NHẬT ĐƠN HÀNG</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.HiddenFor(model => model.Watch_ID)
        @Html.HiddenFor(model => model.Order_ID)
        <div class="form-group fa-border " style="border-color:aquamarine; font-family:Arial;font-size: 20px ">
            <table class="table table-striped ">
                <tr>
                    <td> Mã đơn hàng</td>
                    <td>
                        HD@(Model.Order_ID)
                    </td>
                </tr>
                <tr>
                    <td> Họ tên khách hàng</td>
                    <td>
                        @Model.Order.Customer_Name
                    </td>
                </tr>
                <tr>
                    <td> Email</td>
                    <td>
                        @Model.Order.Customer_Email
                    </td>
                </tr>
                <tr>
                    <td> SDT</td>
                    <td>
                        @Model.Order.Customer_Phone
                    </td>
                </tr>
                <tr>
                    <td> Địa chỉ</td>
                    <td>
                        @Model.Order.Deliver_Address
                    </td>
                </tr>
                <tr>
                    <td> Tình trạng</td>
                    <td>
                        @Html.DropDownList("Deliver_Status", (SelectList)ViewBag.DS)
                        <span>@Html.ValidationMessage("Deliver_Status")</span>
                    </td>
                </tr>
            </table>

        </div>
        <div class="form-group">
            <table class=" table table-bordered">
                <tr style="background-color:orange">
                    <th>Sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                    <th>Tình trạng</th>
                </tr>

                <tr>
                    <td>@Model.ProductTable.Watch_Name</td>
                    <td>
                        @Html.TextBox("Amount", null, new { @class = "numberinput" })
                        @Html.ValidationMessage("Amount")
                    </td>
                    <td>@Model.ProductTable.Selling_Price.ToString("N0")</td>
                    <td>@((Model.Price = Model.Amount * Model.ProductTable.Selling_Price).ToString("N0"))</td>
                    <td>
                        @switch (@Model.Order.Deliver_Status)
                        {
                            case 1:
                                <div>Đang xử lý</div>
                                break;
                            case 2:
                                <div>Đã tiếp nhận</div>
                                break;
                            case 3:
                                <div>Đang giao hàng</div>
                                break;
                            case 4:
                                <div>Đã giao hàng</div>
                                break;
                        }
                    </td>
                </tr>


            </table>
        </div>
        <div class="col-lg-offset-10">

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
}
