@model ClockUniverse.Order_Detail

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}

<h2 style="text-align:center">CHI TIẾT ĐƠN HÀNG</h2>
<div class="form-group fa-border " style="font-family:Arial;font-size: 20px ;width:50%;margin:auto;margin-bottom:1%">
    <table class="table ">
        <tr >
            <th style="color:blue">Thông tin đơn hàng : #HD@(Model.Order_ID) </th>
            <td>(Ngày đặt:@Model.Order.Order_Date.ToShortDateString())</td>
        </tr>
        <tr style="font-weight:bold; border-top:double">
            <th>Thông tin thanh toán</th>
            <th>Địa chỉ giao hàng</th>
        </tr>
        <tr>
            <td> @Model.Order.Customer_Name</td>
            <td> @Model.Order.Customer_Name</td>
        </tr>
        <tr>
            <td> @Model.Order.Customer_Email</td>
            <td> @Model.Order.Deliver_Address</td>
        </tr>
        <tr>
            <td> @Model.Order.Customer_Phone</td>
            <td> @Model.Order.Customer_Phone</td>
        </tr>

    </table>

</div>
<div class="form-group" style="margin:auto;width:50%">
    <table class=" table table-bordered">
        <tr style="background-color:orange">
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
            <th>Tình trạng</th>
        </tr>

        <tr>
            <td>@Model.ProductTable.Watch_Name</td>
            <td>@Model.Amount</td>
            <td>@Model.ProductTable.Selling_Price.ToString("N0")</td>
            <td>@Model.Price.ToString("N0") </td>
            <td>
                @switch (@Model.Order.Deliver_Status)
                {
                    case 1:
                        <div>Đang xử lý</div>
                        break;
                    case 2:
                        <div>Đã tiếp nhận</div>
                        break;
                    case 3:
                        <div>Đang giao hàng</div>
                        break;
                    case 4:
                        <div>Đã giao hàng</div>
                        break;
                } 
            </td>
        </tr>


    </table>
</div>
<div class="col-lg-offset-10">
    Ngày cập nhật : @Model.Order.Order_ChangeDate
</div>
<p>
    @Html.ActionLink("Cập nhật", "Edit", new { id1 = Model.Order_ID, id2 = Model.Watch_ID }, new { @class = " btn btn-primary" })
    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
</p>
