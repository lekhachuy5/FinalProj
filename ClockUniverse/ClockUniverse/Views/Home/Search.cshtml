
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .item {
        height: 488px;
    }

    #Page {
        margin-left: 49%;
    }

    .pagination-container {
        margin-left: 50%;
    }

    .col-sm-3 {
        margin-bottom: 46px;
    }

    .single-item-caption {
        margin-top: 14px;
    }

    li#dot {
        width: 17px;
        height: 0px;
        background: #c1bbbb;
        -moz-border-radius: 25px;
        -webkit-border-radius: 25px;
        --border-radius: 25px;
        border-radius: 50%;
    }

    .container-fluid {
        width: 100%;
        padding-right: 0px;
        padding-left: 0px;
        margin-right: auto;
        margin-left: auto;
    }

    .carousel-indicators {
        position: absolute;
        right: 0;
        bottom: 0;
        left: 0;
        z-index: 15;
        display: -ms-flexbox;
        display: flex;
        -ms-flex-pack: center;
        justify-content: center;
        padding-left: 0;
        margin-right: 15%;
        margin-left: 20%;
        list-style: none;
    }
</style>
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- section title -->
            <div class="col-md-12">
                <div class="section-title">
                    <h3 class="component-ttl"><span> Kết quả tìm kiếm </span></h3>
                    <p style="text-align:center ; font-size:20px"> @ViewBag.Message</p>
                    <div class="space50">&nbsp;</div>
                    <div class="row">
                        @foreach (var item in ViewData["Item"] as IList<ClockUniverse.ProductTable>)
                        {
                            <div class="col-sm-3">
                                <div class="single-item">
                                    <div class="single-item-header">

                                        <a href="@Url.Action("product_detail","products", new { @Watch_ID = item.Watch_ID})"><img src="@Url.Content("~/ProductManager/Image/"+item.Watch_ID)" alt="" style="width:260px;height:280px"></a>


                                    </div>
                                    @if (item.Original_Price <= item.Selling_Price)
                                    {
                                        <div class="single-item-body">
                                            <p class="single-item-title">@item.Watch_Name</p>
                                            <p class="single-item-price">
                                                <span>
                                                    @String.Format("{0:0,0}", item.Selling_Price) ₫
                                                </span>
                                            </p>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="ribbon-wrapper"><div class="ribbon sale">Sale</div></div>
                                        <div class="single-item-body">
                                            <p class="single-item-title">@item.Watch_Name</p>
                                            <p class="single-item-price">
                                                <span class="flash-del">@String.Format("{0:0,0}", item.Original_Price) ₫ </span>
                                                <span class="flash-sale">@String.Format("{0:0,0}", item.Selling_Price) ₫</span>
                                            </p>
                                        </div>
                                    }

                                    <div class="single-item-caption">
                                        <a class="add-to-cart pull-left" href="@Url.Action("ShoppingCart","ShoppingCart")"><i class="fa fa-shopping-cart"></i></a>
                                        <a class="beta-btn primary" href="@Url.Action("product_detail","products", new { @Watch_ID = item.Watch_ID})">Chi tiết <i class="fa fa-chevron-right"></i></a>
                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="space50">&nbsp;</div>


                            <div class="space50">&nbsp;</div>
                        }

                    </div>
                </div>
            </div>
            <!-- section title -->





            <div class="space50">&nbsp;</div>


        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
