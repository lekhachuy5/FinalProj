@model IEnumerable<ClockUniverse.ProductTable>
@{
    ViewBag.Title = "ListItem";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- section title -->
            <div class="col-md-12">
                <div class="section-title">
                   
                </div>
            </div>
            <!-- section title -->
            <div class="space50">&nbsp;</div>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-sm-3">
                        <div class="single-item">
                            <div class="single-item-header">
                                <a href="@Url.Action("product_detail","products", new { @Watch_ID = item.Watch_ID})"><img src="@Url.Content("~/ProductManager/Image/"+item.Watch_ID)" alt=""></a>
                            </div>
                            @if (item.Original_Price <= item.Selling_Price)
                            {
                                <div class="single-item-body">
                                    <p class="single-item-title">@item.Watch_Name</p>
                                    <p class="single-item-price">
                                        <span>@item.Selling_Price.ToString("N0") ₫</span>
                                    </p>
                                </div>
                            }
                            else
                            {
                                <div class="ribbon-wrapper"><div class="ribbon sale">Sale</div></div>
                                <div class="single-item-body">
                                    <p class="single-item-title">@item.Watch_Name</p>
                                    <p class="single-item-price">
                                        <span class="flash-del">@item.Original_Price.ToString("N0") ₫</span>
                                        <span class="flash-sale">@item.Selling_Price.ToString("N0") ₫</span>
                                    </p>
                                </div>
                            }
                            <div class="single-item-caption">
                                <a class="add-to-cart pull-left" href=""><i class="fa fa-shopping-cart"></i></a>
                                <a class="beta-btn primary" href="@Url.Action("product_detail","products", new { @Watch_ID = item.Watch_ID})">Chi tiết <i class="fa fa-chevron-right"></i></a>
                                <div class="clearfix"></div>
                            </div>
                            <div class="space50">&nbsp;</div>
                        </div>
                    </div>



                }

            </div>


            <div class="space50">&nbsp;</div>


        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
